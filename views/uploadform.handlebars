<script>
    var uploadPhoto = document.getElementById("avatar");

    uploadPhoto.onchange = function () {
        if (this.files[0].size > 2000000) {
            alert("Image is too big! Please upload file less than 2MB");
            this.value = "";
        };
    };
    function previewFile() {
        var preview = document.querySelector('img');
        var file = document.querySelector('input#avatar').files[0];
        var reader = new FileReader();

        reader.addEventListener("load", function () {
            preview.src = reader.result;
        }, false);

        if (file) {
            reader.readAsDataURL(file);
        }
    }

    $(document).ready(function () {
        $('#adding-ing').on("click", function () {
            let userTemplate = $('#fuckingtemplate').clone();

            let contentContainer = $("#content-container");
            contentContainer.append(userTemplate.html());
        });
    });
</script>